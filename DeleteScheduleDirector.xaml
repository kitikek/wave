<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wave.DeleteScheduleDirector"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             HorizontalOptions="Center" 
             VerticalOptions="Center"
             Size="385, 150">
    
    <Frame >
        <VerticalStackLayout>
            <Label Text="Введите Id урока, который хотите удалить:" VerticalOptions="Center" HorizontalOptions="Start" Margin="10"/>
            <HorizontalStackLayout>
                <Entry x:Name="EntryId" Placeholder="Id урока" MinimumWidthRequest="240" MaximumHeightRequest="50" VerticalOptions="Center" HorizontalOptions="Center"/>
                <Button
                    FontSize="15"
                    Margin="10"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Text="Удалить"
                    Clicked="DeleteButtonClicked"/>
            </HorizontalStackLayout> 
        </VerticalStackLayout>
    </Frame>
</mct:Popup>