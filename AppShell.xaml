<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="wave.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:wave"
    Shell.FlyoutBehavior="Flyout">


    <ShellContent
        Title="Authorization"
        ContentTemplate="{DataTemplate local:Authorization}"
        Route="Authorization" 
        Icon="authorization.png"/>

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Notifications"
            ContentTemplate="{DataTemplate local:Notification}"
            Route="Notification" 
            Icon="notifications.png"/> 
        
        <ShellContent
            Title="Schedule"
            ContentTemplate="{DataTemplate local:Scedule}"
            Route="Scedule" 
            Icon="schedule.png"/>
        
        <ShellContent
            Title="Attendance"
            ContentTemplate="{DataTemplate local:Attendance}"
            Route="Attendance" 
            Icon="attendance.png"/>
        
        <ShellContent
            Title="Grade"
            ContentTemplate="{DataTemplate local:Grade}"
            Route="Grade" 
            Icon="grade.png"/>

    </FlyoutItem>
</Shell>
